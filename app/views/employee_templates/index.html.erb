<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All employees
    </h1>

    <a href="/employees/new" class="btn btn-block btn-outline-secondary">
      Add a new employee
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Name
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @employees.each do |employee| %>
      <tr>
        <td>
          <%= employee.id %>
        </td>

        <td>
          <%= employee.email %>
        </td>

        <td>
          <%= employee.password %>
        </td>

        <td>
          <%= employee.name %>
        </td>

        <td>
          <%= employee.position %>
        </td>

        <td>
          <%= time_ago_in_words(employee.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(employee.updated_at) %> ago
        </td>

        <td>
          <a href="/employees/<%= employee.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @employees, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
