<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All employees
    </h1>

    <a href="/employees/new" class="btn btn-block btn-outline-secondary">
      Add a new employee
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Name
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @employees.each do |employee| %>
      <tr>
        <!-- Display employee.id start -->
        <td>
          <%= employee.id %>
        </td>
        <!-- Display employee.id end -->

        <!-- Display employee.email start -->
        <td>
          <%= employee.email %>
        </td>
        <!-- Display employee.email end -->

        <!-- Display employee.password start -->
        <td>
          <%= employee.password %>
        </td>
        <!-- Display employee.password end -->

        <!-- Display employee.name start -->
        <td>
          <%= employee.name %>
        </td>
        <!-- Display employee.name end -->

        <!-- Display employee.position start -->
        <td>
          <%= employee.position %>
        </td>
        <!-- Display employee.position end -->

        <!-- Display employee.created_at start -->
        <td>
          <%= time_ago_in_words(employee.created_at) %> ago
        </td>
        <!-- Display employee.created_at end -->

        <!-- Display employee.updated_at start -->
        <td>
          <%= time_ago_in_words(employee.updated_at) %> ago
        </td>
        <!-- Display employee.updated_at end -->

        <td>
          <a href="/employees/<%= employee.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
