<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All project types
    </h1>

    <a href="/project_types/new" class="btn btn-block btn-outline-secondary">
      Add a new project type
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "project_type_templates/project_types_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Type name
        </th>

        <th>
          Sol
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @project_types.each do |project_type| %>
      <tr>
        <td>
          <%= project_type.id %>
        </td>

        <td>
          <%= project_type.type_name %>
        </td>

        <td>
          <% if project_type.sol.present? %>
            <a href="/solutions/<%= project_type.sol.id %>">
              <%= project_type.sol.sol_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(project_type.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(project_type.updated_at) %> ago
        </td>

        <td>
          <a href="/project_types/<%= project_type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @project_types, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
