<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Type name
        </th>

        <th>
          Sol
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @project_types.each do |project_type| %>
      <tr>
        <!-- Display project_type.id start -->
        <td>
          <%= project_type.id %>
        </td>
        <!-- Display project_type.id end -->

        <!-- Display project_type.type_name start -->
        <td>
          <%= project_type.type_name %>
        </td>
        <!-- Display project_type.type_name end -->

        <!-- Display project_type.sol_id start -->
        <td>
          <%= project_type.sol.sol_name %>
        </td>
        <!-- Display project_type.sol_id end -->

        <!-- Display project_type.created_at start -->
        <td>
          <%= time_ago_in_words(project_type.created_at) %> ago
        </td>
        <!-- Display project_type.created_at end -->

        <!-- Display project_type.updated_at start -->
        <td>
          <%= time_ago_in_words(project_type.updated_at) %> ago
        </td>
        <!-- Display project_type.updated_at end -->

        <td>
          <a href="/project_types/<%= project_type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
