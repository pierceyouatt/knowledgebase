<%= search_form_for @q, :class => collapse_search_form, :id => "engagements_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :eng_summary_cont, "Eng summary contains" %>
    <%= f.text_field :eng_summary_cont, :class => "form-control", :placeholder => "Eng summary contains" %>
  </div>

  <div class="form-group">
    <%= f.label :sp_link_cont, "Sp link contains" %>
    <%= f.text_field :sp_link_cont, :class => "form-control", :placeholder => "Sp link contains" %>
  </div>

  <div class="form-group">
    <%= f.label :eng_number_cont, "Eng number contains" %>
    <%= f.text_field :eng_number_cont, :class => "form-control", :placeholder => "Eng number contains" %>
  </div>

  <div class="form-group">
    <%= f.label :eng_name_cont, "Eng name contains" %>
    <%= f.text_field :eng_name_cont, :class => "form-control", :placeholder => "Eng name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :empl_email_cont, "Employee email contains" %>
    <%= f.text_field :empl_email_cont, :class => "form-control", :placeholder => "Employee email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :inst_inst_name_cont, "Institution inst_name contains" %>
    <%= f.text_field :inst_inst_name_cont, :class => "form-control", :placeholder => "Institution inst_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :sol_sol_name_cont, "Solution sol_name contains" %>
    <%= f.text_field :sol_sol_name_cont, :class => "form-control", :placeholder => "Solution sol_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :type_type_name_cont, "ProjectType type_name contains" %>
    <%= f.text_field :type_type_name_cont, :class => "form-control", :placeholder => "ProjectType type_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :phase_phase_name_cont, "ProjPhase phase_name contains" %>
    <%= f.text_field :phase_phase_name_cont, :class => "form-control", :placeholder => "ProjPhase phase_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/engagements" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#engagements_filters">
  Show filters
</a>
