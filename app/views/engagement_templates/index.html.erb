<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All engagements
    </h1>

    <a href="/engagements/new" class="btn btn-block btn-outline-secondary">
      Add a new engagement
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "engagement_templates/engagements_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Empl
        </th>

        <th>
          Inst
        </th>

        <th>
          Sol
        </th>

        <th>
          Eng name
        </th>

        <th>
          Eng number
        </th>

        <th>
          Sp link
        </th>

        <th>
          Eng summary
        </th>

        <th>
          Type
        </th>

        <th>
          Phase
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @engagements.each do |engagement| %>
      <tr>
        <!-- Display engagement.id start -->
        <td>
          <%= engagement.id %>
        </td>
        <!-- Display engagement.id end -->

        <!-- Display engagement.empl_id start -->
        <td>
          <% if engagement.empl.present? %>
            <a href="/employees/<%= engagement.empl.id %>">
              <%= engagement.empl.email %>
            </a>
          <% end %>
        </td>
        <!-- Display engagement.empl_id end -->

        <!-- Display engagement.inst_id start -->
        <td>
          <% if engagement.inst.present? %>
            <a href="/institutions/<%= engagement.inst.id %>">
              <%= engagement.inst.inst_name %>
            </a>
          <% end %>
        </td>
        <!-- Display engagement.inst_id end -->

        <!-- Display engagement.sol_id start -->
        <td>
          <% if engagement.sol.present? %>
            <a href="/solutions/<%= engagement.sol.id %>">
              <%= engagement.sol.sol_name %>
            </a>
          <% end %>
        </td>
        <!-- Display engagement.sol_id end -->

        <!-- Display engagement.eng_name start -->
        <td>
          <%= engagement.eng_name %>
        </td>
        <!-- Display engagement.eng_name end -->

        <!-- Display engagement.eng_number start -->
        <td>
          <%= engagement.eng_number %>
        </td>
        <!-- Display engagement.eng_number end -->

        <!-- Display engagement.sp_link start -->
        <td>
          <%= engagement.sp_link %>
        </td>
        <!-- Display engagement.sp_link end -->

        <!-- Display engagement.eng_summary start -->
        <td>
          <%= engagement.eng_summary %>
        </td>
        <!-- Display engagement.eng_summary end -->

        <!-- Display engagement.type_id start -->
        <td>
          <% if engagement.type.present? %>
            <a href="/project_types/<%= engagement.type.id %>">
              <%= engagement.type.type_name %>
            </a>
          <% end %>
        </td>
        <!-- Display engagement.type_id end -->

        <!-- Display engagement.phase_id start -->
        <td>
          <% if engagement.phase.present? %>
            <a href="/proj_phases/<%= engagement.phase.id %>">
              <%= engagement.phase.phase_name %>
            </a>
          <% end %>
        </td>
        <!-- Display engagement.phase_id end -->

        <!-- Display engagement.created_at start -->
        <td>
          <%= time_ago_in_words(engagement.created_at) %> ago
        </td>
        <!-- Display engagement.created_at end -->

        <!-- Display engagement.updated_at start -->
        <td>
          <%= time_ago_in_words(engagement.updated_at) %> ago
        </td>
        <!-- Display engagement.updated_at end -->

        <td>
          <a href="/engagements/<%= engagement.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @engagements, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
