<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Project Types

    <a data-toggle="collapse" href="#solution_project_types_new_form">
      Add project type
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @solution.project_types.each do |project_type| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/project_types/<%= project_type.id %>">
          <%= project_type.type_name %>
        </a>

        <a href="/delete_project_type_from_sol/<%= project_type.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="solution_project_types_new_form">
        <%= render partial: "solution_templates/solution_project_types_new_form" %>
      </div>
    </div>

  </ul>
</div>
