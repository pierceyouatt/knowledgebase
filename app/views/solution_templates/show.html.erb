<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Solution #<%= @solution.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/solutions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link solution start -->
      <div class="col">
        <a href="/solutions/<%= @solution.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit solution
        </a>
      </div>
      <!-- Edit link solution end -->

      <!-- Delete link solution start -->
      <div class="col">
        <a href="/delete_solution/<%= @solution.id %>" class="btn btn-block btn-outline-secondary">
          Delete solution
        </a>
      </div>
      <!-- Delete link solution end -->
    </div>

    <dl>
      <dt>
        Sol name
      </dt>
      <!-- Display sol_name start -->
      <dd>
        <%= @solution.sol_name %>
      </dd>
      <!-- Display sol_name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@solution.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@solution.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "solution_templates/solution_engagements" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "solution_templates/solution_project_types" %>
  </div>
</div>
<!-- Show Page Customization end -->
