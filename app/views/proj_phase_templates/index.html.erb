<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All proj phases
    </h1>

    <a href="/proj_phases/new" class="btn btn-block btn-outline-secondary">
      Add a new proj phase
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "proj_phase_templates/proj_phases_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Phase name
        </th>

        <th>
          Type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @proj_phases.each do |proj_phase| %>
      <tr>
        <td>
          <%= proj_phase.id %>
        </td>

        <td>
          <%= proj_phase.phase_name %>
        </td>

        <td>
          <% if proj_phase.type.present? %>
            <a href="/project_types/<%= proj_phase.type.id %>">
              <%= proj_phase.type.type_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(proj_phase.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(proj_phase.updated_at) %> ago
        </td>

        <td>
          <a href="/proj_phases/<%= proj_phase.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @proj_phases, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
