<% if @proj_phase.present? %>
  <% if @proj_phase.errors.any? %>
    <% @proj_phase.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new proj phase
</h1>


<hr>

<form action="/create_proj_phase" method="post">

  <div class="form-group">
    <label for="phase_name">
      Phase name
    </label>

    <input type="text" id="phase_name" name="phase_name" class="form-control" value="<%= @proj_phase.phase_name %>">
  </div>

  <div class="form-group">
    <label for="type_id">
      Type
    </label>

    <%= select_tag(:type_id, options_from_collection_for_select(ProjectType.all, :id, :type_name, @proj_phase.type_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create proj phase
  </button>
</form>

<hr>

<a href="/proj_phases">
  Go back
</a>
