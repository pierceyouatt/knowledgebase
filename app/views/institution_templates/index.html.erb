<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All institutions
    </h1>

    <a href="/institutions/new" class="btn btn-block btn-outline-secondary">
      Add a new institution
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "institution_templates/institutions_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Inst name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @institutions.each do |institution| %>
      <tr>
        <!-- Display institution.id start -->
        <td>
          <%= institution.id %>
        </td>
        <!-- Display institution.id end -->

        <!-- Display institution.inst_name start -->
        <td>
          <%= institution.inst_name %>
        </td>
        <!-- Display institution.inst_name end -->

        <!-- Display institution.created_at start -->
        <td>
          <%= time_ago_in_words(institution.created_at) %> ago
        </td>
        <!-- Display institution.created_at end -->

        <!-- Display institution.updated_at start -->
        <td>
          <%= time_ago_in_words(institution.updated_at) %> ago
        </td>
        <!-- Display institution.updated_at end -->

        <td>
          <a href="/institutions/<%= institution.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @institutions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
