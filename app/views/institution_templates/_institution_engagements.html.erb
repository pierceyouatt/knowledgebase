<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Engagements

    <a data-toggle="collapse" href="#institution_engagements_new_form">
      Add engagement
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @institution.engagements.each do |engagement| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/engagements/<%= engagement.id %>">
          <%= engagement.empl_id %>
        </a>

        <a href="/delete_engagement_from_inst/<%= engagement.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="institution_engagements_new_form">
        <%= render partial: "institution_templates/institution_engagements_new_form" %>
      </div>
    </div>

  </ul>
</div>
