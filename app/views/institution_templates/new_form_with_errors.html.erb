<!-- Validation failure messages -->
<% if @institution.present? %>
  <% if @institution.errors.any? %>
    <% @institution.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new institution
</h1>


<hr>

<!-- Form institution start -->
<form action="/create_institution" method="post">
<!-- Form institution end -->

  <!-- Label and input for inst_name start -->
  <div class="form-group">
    <label for="inst_name">
      Inst name
    </label>

    <!-- Input for inst_name start -->
    <input type="text" id="inst_name" name="inst_name" class="form-control" value="<%= @institution.inst_name %>">
    <!-- Input for inst_name end -->
  </div>
  <!-- Label and input for inst_name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create institution
  </button>
</form>

<hr>

<a href="/institutions">
  Go back
</a>
